<Window x:Class="BibliothekVerwaltungApp.Views.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Benutzerverwaltung"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Überschrift -->
        <TextBlock Grid.Row="0"
                   Text="Benutzerverwaltung"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10" />

        <!-- Inhalt -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Linke Seite: Benutzerliste -->
            <GroupBox Header="Benutzer" Grid.Column="0" Margin="0,0,10,0">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Suchfeld (ohne Watermark) -->
                    <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,5">
                        <TextBlock Text="Suche (Name/Rolle):"
                                   Margin="0,0,0,2"/>
                        <TextBox Width="200"
                                 HorizontalAlignment="Left"
                                 Text="{Binding Suchtext, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding BenutzerListe}"
                             SelectedItem="{Binding AusgewaehlterBenutzer, Mode=TwoWay}"
                             DisplayMemberPath="Benutzername" />
                </Grid>
            </GroupBox>

            <!-- Rechte Seite: Details -->
            <GroupBox Header="Details" Grid.Column="1">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Benutzername -->
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="Benutzername:" />
                    <TextBox Grid.Row="0"
                             Grid.Column="2"
                             Margin="0,2,0,5"
                             Text="{Binding BearbeiteterBenutzername, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- Rolle -->
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="Rolle:" />
                    <ComboBox Grid.Row="1"
                              Grid.Column="2"
                              Margin="0,2,0,5"
                              ItemsSource="{Binding VerfuegbareRollen}"
                              SelectedItem="{Binding AusgewaehlteRolle, Mode=TwoWay}"
                              Width="200" />

                    <!-- Neues Passwort -->
                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="Neues Passwort:" />
                    <TextBox Grid.Row="2"
                             Grid.Column="2"
                             Margin="0,2,0,5"
                             Text="{Binding NeuesPasswort, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- Info -->
                    <TextBlock Grid.Row="3"
                               Grid.ColumnSpan="3"
                               Margin="0,5,0,0"
                               Foreground="Gray"
                               FontStyle="Italic"
                               TextWrapping="Wrap"
                               Text="Hinweis: Leeres Passwortfeld bedeutet, dass das bestehende Passwort unverändert bleibt. 'Passwort setzen' überschreibt das Passwort." />
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Buttons unten -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Neu"
                    Width="80"
                    Margin="0,0,10,0"
                    Command="{Binding NeuerBenutzerCommand}" />
            <Button Content="Speichern"
                    Width="90"
                    Margin="0,0,10,0"
                    Command="{Binding SpeichernBenutzerCommand}" />
            <Button Content="Löschen"
                    Width="90"
                    Margin="0,0,10,0"
                    Command="{Binding LoeschenBenutzerCommand}" />
            <Button Content="Passwort setzen"
                    Width="120"
                    Margin="0,0,10,0"
                    Command="{Binding PasswortSetzenCommand}" />
            <Button Content="Schließen"
                    Width="90"
                    Command="{Binding SchliessenCommand}" />
        </StackPanel>
    </Grid>
</Window>
