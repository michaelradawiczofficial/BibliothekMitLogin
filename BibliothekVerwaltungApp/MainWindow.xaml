<Window x:Class="BibliothekVerwaltungApp.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliothekVerwaltungApp"
        mc:Ignorable="d"
        Title="Bibliothek Verwaltung"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#070B17">

    <Window.Resources>
        <!-- Farbpalette -->
        <SolidColorBrush x:Key="LibCardBackground" Color="#0B1220" />
        <SolidColorBrush x:Key="LibCardBorder" Color="#1F2937" />
        <SolidColorBrush x:Key="LibAccent" Color="#3B82F6" />
        <SolidColorBrush x:Key="LibAccentSoft" Color="#60A5FA" />
        <SolidColorBrush x:Key="LibAccentMuted" Color="#1D4ED8" />
        <SolidColorBrush x:Key="LibText" Color="#E5E7EB" />
        <SolidColorBrush x:Key="LibSubText" Color="#9CA3AF" />
        <SolidColorBrush x:Key="LibRowDefault" Color="#111827" />
        <SolidColorBrush x:Key="LibRowBorrowed" Color="#3F1D2B" />
        <SolidColorBrush x:Key="LibRowReserved" Color="#3A2F1A" />
        <SolidColorBrush x:Key="LibInputBackground" Color="#020617" />
        <SolidColorBrush x:Key="LibInputBorder" Color="#1F2937" />
        <SolidColorBrush x:Key="LibStatusBarBackground" Color="#020617" />

        <SolidColorBrush x:Key="LibDanger" Color="#B91C1C" />
        <SolidColorBrush x:Key="LibDangerBorder" Color="#F97373" />

        <!-- Basis-Text -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource LibText}" />
            <Setter Property="FontFamily" Value="Segoe UI" />
        </Style>

        <!-- Standard-Button (leicht abgerundet) -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource LibText}" />
            <Setter Property="Background" Value="{StaticResource LibAccentMuted}" />
            <Setter Property="BorderBrush" Value="{StaticResource LibAccentSoft}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"
                                              RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource LibAccent}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0B1120" />
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource LibAccent}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Background" Value="#111827" />
                                <Setter Property="Foreground" Value="#4B5563" />
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#1F2937" />
                                <Setter Property="Cursor" Value="Arrow" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toolbar-Buttons (oben in den Leisten) -->
        <Style x:Key="ToolbarButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="8,2" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <!-- Beenden-Button -->
        <Style x:Key="DangerButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource LibDanger}" />
            <Setter Property="BorderBrush" Value="{StaticResource LibDangerBorder}" />
            <Setter Property="Padding" Value="8,2" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <!-- GroupBox -->
        <Style TargetType="GroupBox">
            <Setter Property="Background" Value="{StaticResource LibCardBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource LibCardBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{StaticResource LibText}" />
            <Setter Property="FontFamily" Value="Segoe UI" />
        </Style>

        <!-- TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource LibText}" />
            <Setter Property="Background" Value="{StaticResource LibInputBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource LibInputBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Padding" Value="4,2" />
        </Style>

        <!-- ComboBox: überarbeiteter Style mit gut lesbarer Auswahl -->
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource LibText}" />
            <Setter Property="Background" Value="#0F172A" />
            <Setter Property="BorderBrush" Value="{StaticResource LibInputBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Padding" Value="4,2" />
            <Setter Property="SnapsToDevicePixels" Value="True" />

            <!-- Items im Dropdown -->
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="{StaticResource LibText}" />
                        <Setter Property="Background" Value="#020617" />
                        <Setter Property="Padding" Value="4,2" />
                        <Style.Triggers>
                            <!-- Hover im Dropdown -->
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#111827" />
                            </Trigger>
                            <!-- Ausgewähltes Item -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#1E293B" />
                                <Setter Property="Foreground" Value="{StaticResource LibText}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>

            <!-- Rahmen bei Fokus/Hover -->
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource LibAccent}" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource LibAccentSoft}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TabControl / TabItem -->
        <Style TargetType="TabControl">
            <Setter Property="Foreground" Value="{StaticResource LibText}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="{StaticResource LibSubText}" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Padding" Value="8,3" />
            <Setter Property="Background" Value="#020617" />
            <Setter Property="BorderBrush" Value="#1F2937" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Margin="0,0,6,0">
                            <!-- Header anzeigen -->
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- ausgewählt -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#111827" />
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource LibAccent}" />
                                <Setter Property="Foreground" Value="{StaticResource LibText}" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                            </Trigger>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0B1120" />
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource LibAccentSoft}" />
                            </Trigger>
                            <!-- deaktiviert -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#4B5563" />
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#1F2937" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Column Header -->
        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#0F172A"/>
            <Setter Property="Foreground" Value="{StaticResource LibText}"/>
            <Setter Property="BorderBrush" Value="#1F2937"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Scrollbar-Thumb -->
        <Style x:Key="LibScrollThumbStyle" TargetType="Thumb">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="#374151"
                                BorderBrush="{StaticResource LibAccentSoft}"
                                BorderThickness="1"
                                CornerRadius="4" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Scrollbar-Template -->
        <ControlTemplate x:Key="LibScrollBarTemplate" TargetType="ScrollBar">
            <Grid Background="#020617" SnapsToDevicePixels="True">
                <Track x:Name="PART_Track"
                       IsDirectionReversed="True"
                       Focusable="False">
                    <Track.Thumb>
                        <Thumb Style="{StaticResource LibScrollThumbStyle}" />
                    </Track.Thumb>
                </Track>
            </Grid>
        </ControlTemplate>

        <!-- ScrollBar-Style: dunkle, futuristische Scrollbalken -->
        <Style TargetType="ScrollBar">
            <Setter Property="Template" Value="{StaticResource LibScrollBarTemplate}" />
            <Setter Property="Background" Value="#020617" />
            <Setter Property="Width" Value="10" />
            <Setter Property="Height" Value="10" />
            <Style.Triggers>
                <!-- Horizontaler Scrollbar -->
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Width" Value="Auto" />
                    <Setter Property="Height" Value="10" />
                </Trigger>
                <!-- Vertikaler Scrollbar -->
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="10" />
                    <Setter Property="Height" Value="Auto" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- StatusBar -->
        <Style TargetType="StatusBar">
            <Setter Property="Background" Value="{StaticResource LibStatusBarBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LibSubText}" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </Window.Resources>

    <!-- Root-Layout -->
    <DockPanel LastChildFill="True">

        <!-- Statusleiste -->
        <StatusBar DockPanel.Dock="Bottom" Margin="0,5,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding AktuellerBenutzer.Benutzername,
                                          StringFormat=Angemeldet als: {0}}"/>
            </StatusBarItem>

            <StatusBarItem>
                <TextBlock Text="{Binding AktuellerBenutzer.Rolle,
                                          StringFormat=Rolle: {0}}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource LibSubText}"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding AktuellerBenutzer.Rolle}" Value="Gast">
                                    <Setter Property="Foreground" Value="Gray"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding AktuellerBenutzer.Rolle}" Value="Bibliothekar">
                                    <Setter Property="Foreground" Value="{StaticResource LibAccentSoft}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding AktuellerBenutzer.Rolle}" Value="Admin">
                                    <Setter Property="Foreground" Value="#F97373"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>

        <!-- Hauptinhalt -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Linke Seite: Aktionen + Tabs -->
            <GroupBox Header="Aktionen" Grid.Column="0" Padding="10">
                <DockPanel>

                    <!-- Button-Leiste -->
                    <StackPanel Orientation="Horizontal"
                                DockPanel.Dock="Top"
                                HorizontalAlignment="Right"
                                Margin="0,0,0,10">

                        <Button Content="Beenden"
                                Style="{StaticResource DangerButtonStyle}"
                                Margin="0,0,6,0"
                                Click="BeendenButton_Click" />

                        <Button Content="Benutzerverwaltung"
                                Command="{Binding OpenUserManagementCommand}">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource ToolbarButtonStyle}">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IstAdmin}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Tabs: Suche / Hinzufügen / Entfernen -->
                    <TabControl>
                        <!-- Suche -->
                        <TabItem Header="Suche">
                            <Border Background="{StaticResource LibCardBackground}" Padding="10">
                                <StackPanel VerticalAlignment="Top">
                                    <TextBlock Text="Suchbegriff:" Margin="0,0,0,5" />
                                    <Border Background="#020617"
                                            BorderBrush="{StaticResource LibAccentSoft}"
                                            BorderThickness="0,0,0,2"
                                            CornerRadius="2"
                                            Margin="0,0,0,10">
                                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Padding="4,2" />
                                    </Border>

                                    <TextBlock Margin="0,0,0,5"
                                               FontStyle="Italic"
                                               Foreground="{StaticResource LibSubText}"
                                               TextWrapping="Wrap">
                                        Suche in Titel, Autor/Regisseur/Hersteller und ID.
                                    </TextBlock>

                                    <Button Content="Felder leeren"
                                            Margin="0,15,0,0"
                                            Width="140"
                                            HorizontalAlignment="Left"
                                            Command="{Binding ClearSearchCommand}" />
                                </StackPanel>
                            </Border>
                        </TabItem>

                        <!-- Hinzufügen -->
                        <TabItem Header="Hinzufügen">
                            <TabItem.Style>
                                <Style TargetType="TabItem"
                                       BasedOn="{StaticResource {x:Type TabItem}}">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentUserRole}" Value="Gast">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TabItem.Style>

                            <Border Background="{StaticResource LibCardBackground}" Padding="10">
                                <StackPanel VerticalAlignment="Top">
                                    <TextBlock Text="Medientyp:" Margin="0,0,0,5" />
                                    <ComboBox ItemsSource="{Binding MediaTypes}"
                                              SelectedItem="{Binding SelectedMediaType}"
                                              Margin="0,0,0,10"
                                              Width="200" />

                                    <TextBlock Text="Titel:" Margin="0,0,0,5" />
                                    <TextBox Text="{Binding NeuerTitel}"
                                             Margin="0,0,0,10" />

                                    <TextBlock Text="Autor / Regisseur / Hersteller:" Margin="0,0,0,5" />
                                    <TextBox Text="{Binding NeuerAutor}"
                                             Margin="0,0,0,10" />

                                    <!-- Zusatz-Label -->
                                    <TextBlock Margin="0,0,0,5" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Zusatz:"/>
                                                <Setter Property="Foreground" Value="{StaticResource LibText}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedMediaType}" Value="Buch">
                                                        <Setter Property="Text" Value="Verlag:"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedMediaType}" Value="DVD">
                                                        <Setter Property="Text" Value="Dauer (Minuten):"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedMediaType}" Value="Software">
                                                        <Setter Property="Text" Value="Betriebssystem:"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <TextBox Text="{Binding Zusatz1}"
                                             Margin="0,0,0,10" />

                                    <TextBlock Text="ID:" Margin="0,0,0,5" />
                                    <TextBox Text="{Binding NeueId, Mode=OneWay}"
                                             IsReadOnly="True"
                                             Margin="0,0,0,10" />

                                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                        <Button Content="Hinzufügen"
                                                Width="120"
                                                Margin="0,0,10,0"
                                                Command="{Binding HinzufuegenCommand}" />
                                        <Button Content="Felder leeren"
                                                Width="120"
                                                Command="{Binding ClearAddFieldsCommand}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </TabItem>

                        <!-- Entfernen -->
                        <TabItem Header="Entfernen">
                            <TabItem.Style>
                                <Style TargetType="TabItem"
                                       BasedOn="{StaticResource {x:Type TabItem}}">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentUserRole}" Value="Gast">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TabItem.Style>

                            <Border Background="{StaticResource LibCardBackground}" Padding="10">
                                <StackPanel VerticalAlignment="Top">
                                    <TextBlock Text="Medium zum Entfernen suchen:"
                                               Margin="0,0,0,5" />

                                    <Border Background="#020617"
                                            BorderBrush="{StaticResource LibAccentSoft}"
                                            BorderThickness="0,0,0,2"
                                            CornerRadius="2"
                                            Margin="0,0,0,10">
                                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Padding="4,2"
                                                 ToolTip="Suche in Titel, Autor/Regisseur/Hersteller und ID." />
                                    </Border>

                                    <TextBlock Text="Wähle das Medium anschließend in einer der Listen rechts aus und klicke auf 'Entfernen'."
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,10" />

                                    <TextBlock Text="Nur nicht verliehene Medien können entfernt werden."
                                               FontStyle="Italic"
                                               Foreground="{StaticResource LibSubText}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,10" />

                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button Content="Entfernen"
                                                Width="120"
                                                Margin="0,0,10,0"
                                                Command="{Binding EntfernenCommand}" />

                                        <Button Content="Auswahl löschen"
                                                Width="120"
                                                Command="{Binding ClearRemoveSelectionCommand}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </TabItem>
                    </TabControl>
                </DockPanel>
            </GroupBox>

            <!-- GridSplitter: dunkler, passend zum Layout -->
            <GridSplitter Grid.Column="1"
              Width="5"
              Background="#020617"
              BorderBrush="{StaticResource LibCardBorder}"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              ResizeBehavior="PreviousAndNext"
              ShowsPreview="True" />


            <!-- Rechte Seite: Medienübersicht -->
            <GroupBox Header="Medienübersicht" Grid.Column="2" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Button-Leiste oben rechts -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,0,0,5">
                        <Button Content="Verleihen / Zurück"
                                Margin="0,0,5,0"
                                Command="{Binding ToggleVerliehenCommand}"
                                CommandParameter="{Binding SelectedMediumToRemove}">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource ToolbarButtonStyle}">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentUserRole}" Value="Gast">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="Reservieren / Freigeben"
                                Style="{StaticResource ToolbarButtonStyle}"
                                Command="{Binding ToggleReserviertCommand}"
                                CommandParameter="{Binding SelectedMediumToRemove}" />
                    </StackPanel>

                    <!-- TabControl mit Medienlisten -->
                    <TabControl Grid.Row="1">
                        <!-- Alle Medien -->
                        <TabItem Header="Alle Medien">
                            <Border Background="{StaticResource LibCardBackground}" Padding="5">
                                <DataGrid ItemsSource="{Binding GefilterteMedien}"
                                          SelectedItem="{Binding SelectedMediumToRemove, Mode=TwoWay}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          HeadersVisibility="Column"
                                          Margin="0,5,0,0"
                                          Background="{StaticResource LibCardBackground}"
                                          BorderBrush="{StaticResource LibCardBorder}"
                                          Foreground="{StaticResource LibText}">
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="{StaticResource LibRowDefault}"/>
                                            <Setter Property="Foreground" Value="{StaticResource LibText}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IstVerliehen}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource LibRowBorrowed}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IstReserviert}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource LibRowReserved}"/>
                                                </DataTrigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1E293B"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Titel" Binding="{Binding Titel}" Width="*" />
                                        <DataGridTextColumn Header="Autor/Regisseur/Hersteller" Binding="{Binding AutorRegisseurHersteller}" Width="2*" />
                                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*" />
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                                        <DataGridTextColumn Header="Verliehen an"
                                                            Binding="{Binding VerliehenAn}"
                                                            Width="*" />
                                        <DataGridTextColumn Header="Verliehen am"
                                                            Binding="{Binding VerliehenAm, StringFormat={}{0:dd.MM.yyyy HH:mm}}"
                                                            Width="*" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </TabItem>

                        <!-- Bücher -->
                        <TabItem Header="Bücher">
                            <Border Background="{StaticResource LibCardBackground}" Padding="5">
                                <DataGrid ItemsSource="{Binding GefilterteBuecher}"
                                          SelectedItem="{Binding SelectedMediumToRemove, Mode=TwoWay}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          HeadersVisibility="Column"
                                          Margin="0,5,0,0"
                                          Background="{StaticResource LibCardBackground}"
                                          BorderBrush="{StaticResource LibCardBorder}"
                                          Foreground="{StaticResource LibText}">
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="{StaticResource LibRowDefault}"/>
                                            <Setter Property="Foreground" Value="{StaticResource LibText}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IstVerliehen}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource LibRowBorrowed}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IstReserviert}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource LibRowReserved}"/>
                                                </DataTrigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1E293B"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Titel" Binding="{Binding Titel}" Width="*" />
                                        <DataGridTextColumn Header="Autor" Binding="{Binding AutorRegisseurHersteller}" Width="*" />
